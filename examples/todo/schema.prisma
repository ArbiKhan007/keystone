datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Task {
  id           String            @id @default(dbgenerated("gen_random_uuid()")) @postgresql.Uuid
  label        String?
  priority     TaskPriorityType?
  isComplete   Boolean?
  assignedTo   Person?           @relation("Task_assignedTo", fields: [assignedToId], references: [id])
  assignedToId String?           @map("assignedTo") @postgresql.Uuid
  finishBy     DateTime?

  @@index([assignedToId])
}

model Person {
  tasks Task[]  @relation("Task_assignedTo")
  id    String  @id @default(dbgenerated("gen_random_uuid()")) @postgresql.Uuid
  name  String?
  email String? @unique
}

enum TaskPriorityType {
  low
  medium
  high
}